# Make a calcualtor that can add minuse mulitplye and divide

# It needs to be able to say if you input the worng fucntion

n1 = float(input("Enter a number: "))

fun = 1
while fun > 0:
    function = input("Choose a function: + - * /\n\n")
    if function == "+":
        n2 = float(input("Enter the second number: "))
        total = n1 + n2
        break
    if function == "-":
        n2 = float(input("Enter a number: "))
        total = n1 - n2
        break
    if function == "*":
        n2 = float(input("Enter a number: "))
        total = n1 * n2
        break
    if function == "/":    
        n2 = float(input("Enter a number: "))
        total = n1 / n2
        break
    else:
        print("Wrong input use a supported function!")
        
print(f"{n1} {function} {n2} = {total}")
